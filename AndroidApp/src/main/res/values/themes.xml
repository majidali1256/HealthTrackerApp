<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ================================================== -->
    <!-- PREMIUM 3D HEALTH TRACKER THEME                   -->
    <!-- Professional Neumorphic + Glassmorphism Design    -->
    <!-- ================================================== -->
    
    <style name="Theme.HealthTracker" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/primary_blue_dark</item>
        <item name="colorPrimaryContainer">@color/primary_blue_light</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorSecondary">@color/primary_purple</item>
        <item name="colorSecondaryContainer">@color/primary_purple_light</item>
        
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/surface_white</item>
        <item name="colorSurfaceVariant">@color/background_secondary</item>
        
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        
        <item name="android:navigationBarColor">@color/nav_background</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <item name="colorError">@color/error_red</item>
        <item name="android:windowBackground">@color/background_secondary</item>
    </style>
    
    <style name="Theme.HealthTracker.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.HealthTracker</item>
    </style>
    
    <!-- ================================================== -->
    <!-- 3D BUTTON STYLES                                  -->
    <!-- ================================================== -->
    
    <style name="Widget.HealthTracker.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:background">@drawable/bg_button_3d</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="backgroundTint">@null</item>
    </style>
    
    <style name="Widget.HealthTracker.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/primary_blue</item>
        <item name="strokeColor">@color/primary_blue</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
    
    <style name="Widget.HealthTracker.Button.Google" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/text_primary</item>
        <item name="strokeColor">@color/card_border</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:background">@color/google_red_light</item>
    </style>
    
    <style name="Widget.HealthTracker.Button.Facebook" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="backgroundTint">@color/facebook_blue</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>
    
    <!-- ================================================== -->
    <!-- TEXT INPUT STYLE                                  -->
    <!-- ================================================== -->
    
    <style name="Widget.HealthTracker.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeColor">@color/primary_blue</item>
        <item name="hintTextColor">@color/primary_blue</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
    
    <!-- ================================================== -->
    <!-- 3D CARD STYLES                                    -->
    <!-- ================================================== -->
    
    <style name="Widget.HealthTracker.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>
    
    <style name="Widget.HealthTracker.Card.Neumorphic" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>
    
    <style name="Widget.HealthTracker.Card.Glass" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>
    
    <!-- ================================================== -->
    <!-- FAB STYLE                                         -->
    <!-- ================================================== -->
    
    <style name="Widget.HealthTracker.FAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="tint">@color/text_on_primary</item>
        <item name="fabSize">normal</item>
        <item name="elevation">16dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.HealthTracker.FAB</item>
    </style>
    
    <style name="ShapeAppearance.HealthTracker.FAB" parent="ShapeAppearance.Material3.Corner.Full">
        <item name="cornerSize">20dp</item>
    </style>
    
    <!-- ================================================== -->
    <!-- BOTTOM NAVIGATION                                 -->
    <!-- ================================================== -->
    
    <style name="Widget.HealthTracker.BottomNav.ActiveIndicator" parent="">
        <item name="android:color">@color/nav_indicator</item>
    </style>
    
    <!-- ================================================== -->
    <!-- CHIP STYLES                                       -->
    <!-- ================================================== -->
    
    <style name="Widget.HealthTracker.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>
    
    <!-- ================================================== -->
    <!-- PREMIUM TEXT APPEARANCES                          -->
    <!-- ================================================== -->
    
    <style name="TextAppearance.HealthTracker.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">32sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
    
    <style name="TextAppearance.HealthTracker.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.HealthTracker.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TextAppearance.HealthTracker.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="TextAppearance.HealthTracker.MetricValue" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">56sp</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>
    
    <style name="TextAppearance.HealthTracker.MetricValue.Large" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">80sp</item>
        <item name="android:letterSpacing">-0.04</item>
    </style>
    
    <style name="TextAppearance.HealthTracker.MetricValue.Card" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">32sp</item>
    </style>
</resources>
