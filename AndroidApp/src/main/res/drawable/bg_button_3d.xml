<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="4dp"
        android:left="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#264F46E5" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:right="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#6366F1"
                android:endColor="#4F46E5" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:right="5dp"
        android:top="1dp"
        android:left="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#818CF8"
                android:endColor="#6366F1" />
            <corners android:radius="14dp" />
        </shape>
    </item>
</layer-list>
