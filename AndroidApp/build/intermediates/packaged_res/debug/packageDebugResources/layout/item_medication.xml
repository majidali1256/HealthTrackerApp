<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMedication"
        style="@style/Widget.HealthTracker.Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_sm" android:tag="layout/item_medication_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/card_padding">

            <!-- Pill Icon -->
            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_icon_circle_purple"
                android:padding="10dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/sleep_purple"
                tools:ignore="ContentDescription" />

            <!-- Medication Name -->
            <TextView
                android:id="@+id/tvMedicationName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textAppearance="@style/TextAppearance.HealthTracker.Body"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/btnTaken"
                app:layout_constraintStart_toEndOf="@id/ivIcon"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Metformin" />

            <!-- Dosage -->
            <TextView
                android:id="@+id/tvDosage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textAppearance="@style/TextAppearance.HealthTracker.Caption"
                app:layout_constraintEnd_toStartOf="@id/btnTaken"
                app:layout_constraintStart_toEndOf="@id/ivIcon"
                app:layout_constraintTop_toBottomOf="@id/tvMedicationName"
                tools:text="500mg" />

            <!-- Frequency/Schedule -->
            <TextView
                android:id="@+id/tvFrequency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_hint"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@id/btnTaken"
                app:layout_constraintStart_toEndOf="@id/ivIcon"
                app:layout_constraintTop_toBottomOf="@id/tvDosage"
                tools:text="Twice daily" />

            <!-- Next Dose Time -->
            <TextView
                android:id="@+id/tvNextDose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/primary_blue"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/btnTaken"
                app:layout_constraintStart_toEndOf="@id/ivIcon"
                app:layout_constraintTop_toBottomOf="@id/tvFrequency"
                tools:text="Next: 9:00 AM" />

            <!-- Refill Warning -->
            <TextView
                android:id="@+id/tvRefillWarning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/warning_orange"
                android:textSize="11sp"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@id/btnTaken"
                app:layout_constraintStart_toEndOf="@id/ivIcon"
                app:layout_constraintTop_toBottomOf="@id/tvNextDose"
                tools:text="⚠️ Only 5 left"
                tools:visibility="visible" />

            <!-- Taken Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTaken"
                style="@style/Widget.HealthTracker.Button.Primary"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Take"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
         