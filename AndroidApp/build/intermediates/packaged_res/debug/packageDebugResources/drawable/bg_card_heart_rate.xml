<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="4dp"
        android:left="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#20E11D48" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:right="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#F43F5E"
                android:endColor="#E11D48" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <item
        android:bottom="6dp"
        android:right="6dp"
        android:top="2dp"
        android:left="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#FB7185"
                android:endColor="#F43F5E" />
            <corners android:radius="22dp" />
        </shape>
    </item>
</layer-list>
