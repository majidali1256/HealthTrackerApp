<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_secondary">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/screen_padding_horizontal"
                android:paddingTop="@dimen/screen_padding_vertical"
                android:paddingBottom="100dp">

                <!-- Header -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tools"
                    android:textAppearance="@style/TextAppearance.HealthTracker.Headline" />

                <!-- Emergency SOS Banner -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardEmergency"
                    style="@style/Widget.HealthTracker.Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lg"
                    app:cardBackgroundColor="@color/background_primary"
                    app:strokeColor="@color/alert_red"
                    app:strokeWidth="2dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/card_padding">

                        <!-- Emergency Icon -->
                        <ImageView
                            android:id="@+id/ivEmergencyIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_emergency_icon"
                            android:padding="10dp"
                            android:src="@android:drawable/ic_dialog_alert"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/alert_red"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/tvEmergencyTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Emergency SOS"
                            android:textAppearance="@style/TextAppearance.HealthTracker.Title"
                            android:textColor="@color/alert_red"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/ivEmergencyIcon"
                            app:layout_constraintTop_toTopOf="@id/ivEmergencyIcon" />

                        <TextView
                            android:id="@+id/tvEmergencySubtext"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="4dp"
                            android:text="Tap to share live GPS &amp; Medical ID with contacts"
                            android:textAppearance="@style/TextAppearance.HealthTracker.Body"
                            android:textColor="@color/text_secondary"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/ivEmergencyIcon"
                            app:layout_constraintTop_toBottomOf="@id/tvEmergencyTitle" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Tools Grid -->
                <GridLayout
                    android:id="@+id/toolsGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lg"
                    android:columnCount="2">

                    <!-- Medical Records -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardMedicalRecords"
                        style="@style/Widget.HealthTracker.Card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="@dimen/spacing_xs">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_lg">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_icon_circle"
                                android:padding="10dp"
                                android:src="@android:drawable/ic_menu_agenda"
                                app:tint="@color/primary_blue"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_sm"
                                android:text="Medical Records"
                                android:textAppearance="@style/TextAppearance.HealthTracker.Body"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Encrypted labs &amp; scripts"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Symptom Checker -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardSymptomChecker"
                        style="@style/Widget.HealthTracker.Card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="@dimen/spacing_xs">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_lg">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_icon_circle_teal"
                                android:padding="10dp"
                                android:src="@android:drawable/ic_menu_help"
                                app:tint="@color/steps_teal"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_sm"
                                android:text="Symptom Checker"
                                android:textAppearance="@style/TextAppearance.HealthTracker.Body"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="AI-driven guidance"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Food Logger -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardFoodLogger"
                        style="@style/Widget.HealthTracker.Card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="@dimen/spacing_xs">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_lg">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_icon_circle_green"
                                android:padding="10dp"
                                android:src="@android:drawable/ic_menu_camera"
                                app:tint="@color/nutrition_green"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_sm"
                                android:text="Food Logger"
                                android:textAppearance="@style/TextAppearance.HealthTracker.Body"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Scan or track calories"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Medications -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardMedications"
                        style="@style/Widget.HealthTracker.Card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="@dimen/spacing_xs">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_lg">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_icon_circle_purple"
                                android:padding="10dp"
                                android:src="@android:drawable/ic_menu_my_calendar"
                                app:tint="@color/sleep_purple"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_sm"
                                android:text="Medications"
                                android:textAppearance="@style/TextAppearance.HealthTracker.Body"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Reminders &amp; tracking"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Trends -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardTrends"
                        style="@style/Widget.HealthTracker.Card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="@dimen/spacing_xs">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_lg">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_icon_circle"
                                android:padding="10dp"
                                android:src="@android:drawable/ic_menu_sort_by_size"
                                app:tint="@color/primary_blue"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_sm"
                                android:text="Health Trends"
                                android:textAppearance="@style/TextAppearance.HealthTracker.Body"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Weekly &amp; monthly insights"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Export Reports -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardExportReports"
                        style="@style/Widget.HealthTracker.Card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="@dimen/spacing_xs">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_lg">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_icon_circle_cyan"
                                android:padding="10dp"
                                android:src="@android:drawable/ic_menu_share"
                                app:tint="@color/hydration_cyan"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_sm"
                                android:text="Export Reports"
                                android:textAppearance="@style/TextAppearance.HealthTracker.Body"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="PDF health summaries"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </GridLayout>
            </LinearLayout>
        </ScrollView>

        <!-- Bottom Navigation -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/background_primary"
            app:elevation="8dp"
            app:menu="@menu/bottom_nav_menu" />

        <!-- FAB -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddLog"
            style="@style/Widget.HealthTracker.FAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/spacing_lg"
            android:layout_marginBottom="80dp"
            android:contentDescription="@string/add_entry"
            android:src="@android:drawable/ic_input_add" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
