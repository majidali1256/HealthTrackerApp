<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_secondary">

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Top 60% - Biometric Hub -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/biometricHub"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="60"
                android:background="@color/background_primary"
                android:paddingHorizontal="@dimen/screen_padding_horizontal"
                android:paddingTop="@dimen/spacing_lg">

                <!-- Header -->
                <TextView
                    android:id="@+id/tvGreeting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Good Morning"
                    android:textAppearance="@style/TextAppearance.HealthTracker.Body"
                    android:textColor="@color/text_secondary"
                    app:layout_constraintEnd_toStartOf="@id/ivProfile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textAppearance="@style/TextAppearance.HealthTracker.Headline"
                    app:layout_constraintEnd_toStartOf="@id/ivProfile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvGreeting"
                    tools:text="John Doe" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="@dimen/profile_picture_small"
                    android:layout_height="@dimen/profile_picture_small"
                    android:src="@android:drawable/ic_menu_camera"
                    app:civ_border_color="@color/primary_blue"
                    app:civ_border_width="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription,MissingClass" />

                <!-- Primary Metric Card (Heart Rate) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPrimaryMetric"
                    style="@style/Widget.HealthTracker.Card"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/spacing_lg"
                    app:layout_constraintBottom_toTopOf="@id/metricRow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvUserName">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/card_padding">

                        <TextView
                            android:id="@+id/tvPrimaryMetricLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/heart_rate"
                            android:textAppearance="@style/TextAppearance.HealthTracker.Body"
                            android:textColor="@color/text_secondary"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/ivPrimaryMetricIcon"
                            android:layout_width="@dimen/icon_size_lg"
                            android:layout_height="@dimen/icon_size_lg"
                            android:src="@android:drawable/ic_menu_compass"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/heart_rate_red"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/tvPrimaryMetricValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textAppearance="@style/TextAppearance.HealthTracker.MetricValue"
                            android:textColor="@color/primary_blue"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="72" />

                        <TextView
                            android:id="@+id/tvPrimaryMetricUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/bpm"
                            android:textAppearance="@style/TextAppearance.HealthTracker.Title"
                            android:textColor="@color/text_secondary"
                            app:layout_constraintBaseline_toBaselineOf="@id/tvPrimaryMetricValue"
                            app:layout_constraintStart_toEndOf="@id/tvPrimaryMetricValue" />

                        <TextView
                            android:id="@+id/tvPrimaryMetricStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_status_chip"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:text="Normal"
                            android:textColor="@color/success_green"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Secondary Metrics Row -->
                <LinearLayout
                    android:id="@+id/metricRow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:layout_marginBottom="@dimen/spacing_md"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <!-- Steps Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardSteps"
                        style="@style/Widget.HealthTracker.Card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_sm"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/card_padding">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/steps"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvStepsValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/steps_teal"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                tools:text="8,245" />

                            <ProgressBar
                                android:id="@+id/progressSteps"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="4dp"
                                android:layout_marginTop="4dp"
                                android:max="100"
                                android:progress="0"
                                android:progressTint="@color/steps_teal" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Sleep Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardSleep"
                        style="@style/Widget.HealthTracker.Card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/spacing_xs"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/card_padding">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sleep"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvSleepValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="@color/sleep_purple"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                tools:text="7.5h" />

                            <TextView
                                android:id="@+id/tvSleepScore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Score: --"
                                android:textColor="@color/text_hint"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Hydration Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardHydration"
                        style="@style/Widget.HealthTracker.Card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/card_padding">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/hydration"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvHydrationValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/hydration_cyan"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                tools:text="6" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/glasses"
                                android:textColor="@color/text_hint"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Bottom 40% - Recent Logs -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/recentLogsSection"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"
                android:paddingHorizontal="@dimen/screen_padding_horizontal"
                android:paddingTop="@dimen/spacing_md">

                <TextView
                    android:id="@+id/tvRecentLogsTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/recent_logs"
                    android:textAppearance="@style/TextAppearance.HealthTracker.Title"
                    app:layout_constraintEnd_toStartOf="@id/tvViewAll"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvViewAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/view_all"
                    android:textColor="@color/primary_blue"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecentLogs"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:clipToPadding="false"
                    android:paddingBottom="80dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvRecentLogsTitle"
                    tools:listitem="@layout/item_health_log" />

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/emptyState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvRecentLogsTitle">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:alpha="0.5"
                        android:src="@android:drawable/ic_menu_recent_history"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="No recent logs"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap + to add your first entry"
                        android:textColor="@color/text_hint"
                        android:textSize="12sp" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <!-- FAB for Quick Log -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddLog"
            style="@style/Widget.HealthTracker.FAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/spacing_lg"
            android:contentDescription="@string/add_entry"
            android:src="@android:drawable/ic_input_add" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
